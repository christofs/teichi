 */
 function _teicontent_get_settings_for_filter_xml_format( $format_id ) {
 //debug("_get_settings_for_filter_xml_format:= param:" . $format_id);
  $formats = filter_list_format( $format_id );
  //debug('format: ', $formats);
  //TODO:?
  return $formats[ 'teicontent' ]->settings;
}

/**
 * Given format id (system id for format created by user), returns
 * true (1) if using teicontent module
 */
function _is_using_teicontent( $format_id ) {
  $formats = filter_list_format( $format_id );
  // check if teicontet filter is set
  if (!isset($formats) || !isset($formats['teicontent']) ) {
     return false;
  }
  // is active?
  return $formats[ 'teicontent' ]->status != '0';
}

/**
 * Use first of two values that is set.
 */
function _teicontent_or( $val1, $val2 ) {
  return isset( $val1 ) ? $val1 : $val2;
}

