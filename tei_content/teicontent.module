/**
 * Invoked from hook_filter_info -> process callback
 */
function _teicontent_filter_xml($text, $filter, $format, $langcode, $cache, $cache_id) {
  $index     =  'teicontent_xslt_path'; //_get_xslt_path_index( $format->name );
  $css_index = 'teicontent_css_path';

  if ( ! array_key_exists( $index , $filter->settings ) ) {
    return $text;
  }

  $xslt_path = drupal_get_path('module', 'teicontent') . '/' . $filter->settings[$index];
  $css_path='';
  
  if ( array_key_exists( $css_index , $filter->settings ) ) {
    $css_path = drupal_get_path('module', 'teicontent') . '/' . $filter->settings[$css_index];
  }
  
  return _teicontent_transform($text, $xslt_path, $css_path);
}

